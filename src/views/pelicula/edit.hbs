<div class="container mt-2 mx-auto p-2" style="max-width: 960px;">
    <h2 class="text-center mb-2">Actualizar {{pelicula.titulo}}
        <i class="fa-solid fa-pen-to-square"></i>
    </h2>
    <form class="p-2 fs-5 fw-bold" action="/edit/{{pelicula.id}}" method="post">
        <div class="mb-3">
            <label class="form-label p-1" for="nombre">Titulo</label>
            <input type="text" id="titulo" value="{{pelicula.titulo}}" class="form-control" name="titulo"
                placeholder="Escriba el titulo" autofocus required>
        </div>
        <div class="mb-3">
            <label class="form-label p-1" for="name">Genero</label>
            <input type="text" id="genero" value="{{pelicula.genero}}" class="form-control" name="genero"
                placeholder="Escriba el genero" required>
        </div>
        <div class="mb-3">
            <label class="form-label p-1" for="apellido">Descripción</label>
            <textarea id="descripcion" value="{{pelicula.descripcion}}" class="form-control" name="descripcion"
                placeholder="Escriba una breve descripción" required></textarea>
        </div>
        <div class="mt-4 text-center fs-3">
            <button class="btn btn-dark">Actualizar</button>
        </div>
    </form>
</div>